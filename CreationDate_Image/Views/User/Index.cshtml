@model IEnumerable<CreationDate_Image.Models.User>

@{
    ViewData["Title"] = "List of Users";
}

<h2>List of Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Creation Date</th>
            <th>Image</th>
            <th>Procedures</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.CreationDate</td>
                <td>
                    @if (!string.IsNullOrEmpty(user.Image))
                    {
                        <img src="data:image/png;base64,@user.Image" alt="User Image" style="width:100px;height:100px;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a> 
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New User</a>
